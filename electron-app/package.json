{
  "name": "electron-app",
  "version": "1.0.0",
  "description": "Mac Remote Server App",
  "main": "main.js",
  "author": "Your Name",
  "license": "ISC",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --mac"
  },
  "dependencies": {
    "@jitsi/robotjs": "^0.6.18",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
