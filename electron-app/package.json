    "socket.io": "^4.8.1"
  },
  "devDependencies": {
    "electron": "^38.2.2",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "com.yourname.macremote",
    "productName": "Mac Remote Server",
    "mac": {
